{
    "esm": {
        "version": "2.5",
        "website": "http://www.ezservermonitor.com",
        "check_updates": true,
        "auto_refresh": 0,
        "theme": "blue",
        "custom_title": "Wordpress Server Monitoring"
    },
    "cpu": {
        "enable_temperature": false
    },
    "disk": {
        "show_tmpfs": false,
        "show_filesystem": true
    },
    "ping": {
        "hosts": [
            "ubuntu.com",
            "google.com"
        ]
    },
    "last_login": {
        "enable": true,
        "max": 5
    },
    "services": {
        "show_port": true,
        "list": [
            {
                "name": "Apache",
                "host": "localhost",
                "port": 80,
                "protocol": "tcp"
            },
            {
                "name": "Database Server",
                "host": "{{ hostvars[groups['db'][0]]['ansible_default_ipv4']['address'] }}",
                "port": 3306,
                "protocol": "tcp"
            }
        ]
    }
}
